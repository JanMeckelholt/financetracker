<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    </div>
  <% end %>
<% end %>

<% if @friend %>
	<div class="well results-block">
	  <strong>Symbol: </strong> <%= @friend.email %>
	  <strong>Name: </strong> <%= @friend.full_name %>
	  <strong>Price: </strong> 
	</div>
  <%= link_to "Add Person to my Friends", users_add_friend_path(friend_email: @friend.email), method: :post, class: "btn btn-lg btn-success" %>
 <% end %>