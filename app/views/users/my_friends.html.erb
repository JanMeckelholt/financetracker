<h1>My Friends</h1>


<% if @my_friends.size > 0  %>
	<table class="table table-bordered">                         
	  <tr>                          
	    <th scope="col">Name</th>
	    <th scope="col">email</th>
	    <th scope="col"></th>
	  </tr>
		<% @my_friends.eachs do |friend| %>      
	  <tr>
	    <td><%= friend.name %></td>  	
	    <td><%= friend.email %></td>  	
	    <td><%= link_to "Delete", users_remove_friend(friend: friend.id), method: :post %></td>  	
	  </tr>
	<% end %>                        	
	</table> 
<% else %> 
	<h4>No friends yet!</h4>
<% end %> 